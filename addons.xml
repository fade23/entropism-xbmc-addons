<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.entropism"
        name="Entropism Add-ons"
        version="1.0.0"
        provider-name="Ross Glass">
    <extension point="xbmc.addon.repository"
        name="Entropism Repository">
        <info>https://github.com/fade23/entropism-xbmc-addons/raw/master/addons.xml</info>
        <checksum>https://github.com/fade23/entropism-xbmc-addons/raw/master/addons.xml.md5</checksum>
        <datadir zip="true">https://github.com/fade23/entropism-xbmc-addons/raw/master/</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Entropism Addons for XBMC</summary>
        <description>Addons for XBMC</description>
        <disclaimer>-</disclaimer>
        <platform>all</platform>
    </extension>
</addon>

<addon id="script.HATrigger"
    name="HA Trigger"
    version="0.1.0"
    provider-name="Entropism">
    <requires>
        <import addon="xbmc.python" version="1.0"/>
        <import addon="script.module.simplejson" version="2.0.10"/>
    </requires>
    <extension point="xbmc.service" name="HATrigger.service" library="service.py"/>
    <extension point="xbmc.addon.metadata" name="HATrigger.metadata">
        <summary lang="en">Trigger HA</summary>
        <description lang="en">Trigger home automation events on player events
        </description>
        <platform>all</platform>
        <summary lang="en">Trigger home automation events on player events
        </summary>
    </extension>
</addon>
</addons>
